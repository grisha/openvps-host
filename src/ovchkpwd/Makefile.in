INSTALL=@INSTALL@
PREFIX=@prefix@

ohchkpwd: ovchkpwd.c
	$(CC) -o ovchkpwd ovchkpwd.c -lcrypt

install: ohchkpwd
	$(INSTALL) -m 4755 -o root ovchkpwd $(DESTDIR)$(PREFIX)/sbin/ovchkpwd

clean:
	rm -rf ovchkpwd core *~ .libs *.o *.slo *.lo *.la

distclean: clean
	rm -f Makefile

