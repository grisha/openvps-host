<IfModule !mod_python.c>
  LoadModule python_module modules/mod_python.so
</IfModule>

<IfModule mod_python.c>

  SetHandler mod_python

  PythonDebug Off
  PythonAuthenHandler openvps.www.authen
  PythonHandler openvps.www.panel

  <Location />
    AuthType Basic
    AuthName "Your main UserId and Password"
    require valid-user
  </Location>

  Alias /images @prefix@/openvps/images
  <Directory @prefix@/openvps/images>
    SetHandler None
    Options -Indexes
    Allow from all
    Satisfy Any
  </Directory>

  ErrorDocument 401 /images/unauthorized.html

</IfModule>




