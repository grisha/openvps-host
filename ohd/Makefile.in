INSTALL=@INSTALL@
PREFIX=@prefix@
MISC=@prefix@/oh/misc
SUDOERS=/etc/sudoers  # XXX conf
OHD_USER=ohd

all: ping traceroute mount umount

ping: ping.c common.c common.h
	$(CC) -o ping ping.c common.c

traceroute: traceroute.c common.c common.h
	$(CC) -o traceroute traceroute.c common.c

mount: mount.c common.c common.h
	$(CC) -o mount mount.c common.c

umount: umount.c common.c common.h
	$(CC) -o umount umount.c common.c

install: ping traceroute mount umount
	$(INSTALL) -m 4755 -o root ping $(DESTDIR)$(MISC)/ping
	$(INSTALL) -m 4755 -o root traceroute $(DESTDIR)$(MISC)/traceroute
	$(INSTALL) -m 4755 -o root mount $(DESTDIR)$(MISC)/mount
	$(INSTALL) -m 4755 -o root umount $(DESTDIR)$(MISC)/umount
	$(INSTALL) -m 4755 -o root ohdexec $(DESTDIR)$(MISC)/ohdexec
	$(INSTALL) sshd_config $(DESTDIR)/etc/ssh/sshd_config_ohd

clean:
	rm -rf ping traceroute mount umount core *~ .libs *.o *.slo *.lo *.la

distclean: clean
	rm -f Makefile

