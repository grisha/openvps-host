INSTALL=@INSTALL@
SBINDIR=@prefix@/sbin
MISC=@prefix@/oh/misc
VARDB=/var/db/oh
BACKUP=/backup
CONFIG=@prefix@/etc/ohhost.conf
VERSION=version.txt

all:
	cd ohd && $(MAKE)
	cd src && $(MAKE)

install:
	$(INSTALL) -d $(DESTDIR)$(SBINDIR)
	$(INSTALL) -d $(DESTDIR)$(MISC)
	@if test ! -e $(DESTDIR)$(VARDB) ; then \
		$(INSTALL) -d $(DESTDIR)$(VARDB); \
# 		if test -z "$(DESTDIR)"; then \
# 			touch $(DESTDIR)$(BACKUP)/level0; \
# 		fi ; \
	fi
	cd scripts && $(MAKE) install
	@$(MAKE) install_py_lib
	cd rhinit && $(MAKE) install
	cd crontab && $(MAKE) install
	cd src && $(MAKE) install
	cd www && $(MAKE) install
	cd ohd && $(MAKE) install
	@if test ! -e $(DESTDIR)$(CONFIG) ; then \
		$(INSTALL) ohhost.conf $(DESTDIR)$(CONFIG); \
	else \
		echo "Not installing $(DESTDIR)$(CONFIG) because it already exists."; \
	fi
#	if test -z "$(DESTDIR)"; then \
#		$(MAKE) fix_sems; \
#	fi
	$(INSTALL) $(VERSION) $(DESTDIR)/etc/oh-release


