INSTALL=@INSTALL@
SBINDIR=@prefix@/sbin
MISC=@prefix@/oh/misc
VARDB=/var/db/oh
BACKUP=/backup
CONFIG=@prefix@/etc/ohhost.conf
VERSION=version.txt

all:
	cd ohd && $(MAKE)
	cd src && $(MAKE)

install:
	$(INSTALL) -d $(SBINDIR)
	$(INSTALL) -d $(MISC)
	@if test ! -e $(VARDB) ; then \
		$(INSTALL) -d $(VARDB); \
		touch $(BACKUP)/level0; \
	fi
	cd scripts && $(MAKE) install
	@$(MAKE) install_py_lib
	cd rhinit && $(MAKE) install
	cd crontab && $(MAKE) install
	cd src && $(MAKE) install
	cd www && $(MAKE) install
	cd ohd && $(MAKE) install
	@if test ! -e $(CONFIG) ; then \
		$(INSTALL) ohhost.conf $(CONFIG); \
	else \
		echo "Not installing $(CONFIG) because it already exists."; \
	fi
	@if test -z "`grep kernel.sem /etc/sysctl.conf`"; then \
		echo "Increasing the number of available semaphores"; \
		sysctl -w kernel.sem="250 256000 32 1024"; \
		echo "kernel.sem = 250 256000 32 1024" >> /etc/sysctl.conf; \
	fi

	@cp $(VERSION) /etc/oh-release

install_py_lib:
	cd lib/python && python setup.py install

clean:
	cd scripts && $(MAKE) clean
	cd rhinit && $(MAKE) clean
	cd src && $(MAKE) clean
	cd crontab && $(MAKE) clean
	rm -rf *~ lib/python/oh/host/*.pyc lib/python/oh/host/*.pyo lib/python/oh/host/*~ lib/python/build

distclean: clean
	cd scripts && $(MAKE) distclean
	cd rhinit && $(MAKE) distclean
	cd src && $(MAKE) distclean
	cd crontab && $(MAKE) distclean
	rm -rf Makefile config.h config.status config.cache config.log \
		autom4te.cache

