# $Id: ohfixproc,v 1.1 2004/03/25 16:48:40 grisha Exp $

VPROC=/usr/local/vproc-0.01/vproc
ETHIF=eth0

# See how we were called.
case "$1" in
  start)
	echo "Hiding proc entries from vservers using vproc"

	# hide everything
	for file in /proc/*; do 
	    $VPROC -d $file > /dev/null 2>&1
	done

	# unhide only the bare minimum
	 for file in /proc/{*info,stat,uptime,loadavg,version,net}; do
	     $VPROC -e $file
	 done
	;;
  stop)
	# nothing to do here
	;;
  restart)
	$0 stop
	$0 start
	;;
  reload)
	echo Not implemented
	;;
  force-reload)
	$0 stop
	$0 start
        ;;
  status)
	echo Not implemented
	;;
  *)
	echo "Usage: ohfixproc {start|stop|restart|reload|status}"
	exit 1
esac

exit 0




